#include<iostream>
using namespace std;

int arr[10][10],var,source;


void Bfs_Traverse()
{

    int i, j, Bfs_Queue[10], visited[10], front = -1, rear = 0;

    for(j = 0 ; j < var ; j++)
    {
        visited[j] = 0;            //at first all visited vertex initialized to 0
    }
    cout<<"After BFS Traversal the graph: "<<endl;
    Bfs_Queue[rear] = source;
    visited[source] = 1;          // turning a visited vertex to 1(black vertex)

    while( front != rear)
    {
        cout << Bfs_Queue[++front] << endl;
        i = Bfs_Queue[front];
        for(j = 0 ; j < var ; j++)
        {
            if(arr[i][j] != 0 && visited[j] != 1)
            {
              Bfs_Queue[++rear] = j;
              visited[j] = 1;
            }
        }
    }
}


int main()
{
    int i, j;
    cout<<"Enter the number of vertices in the graph: ";
    cin>>var;
    cout<<"Enter the adjacency matrix of the graph: "<<endl;
    for(i = 0 ; i < var ; i++)
    {
        for(j = 0 ; j < var ; j++ )
        {
            cin >> arr[i][j];
        }
    }
    cout << "Enter the source vertex: ";
    cin >> source;

    Bfs_Traverse();


    return 0;
}

/*
0 1 1 0
0 0 1 0
1 0 0 1
0 0 0 1
result: 2 0 3 1
*/
